
*{
margin:0;
padding: 10px 15px;
box-sizing: border-box;
font-family: 'Poppins',sans-serif;
}

nav{
display: flex;
width: 100%;
background: #0a5071;
position:relative;
justify-content: space-between;
text-align: center;
padding:25px 30px;
}

nav.icon{
font-size: 30px;
font-weight:800;
color: #fff;
cursor: pointer;
}

nav ul{
 display: flex;
 list-style: none;
 margin: auto 0;
 }

 nav ul li{
    margin: 0 2px;;
	}
	nav ul li a{
	  color: #fff;
	  font-size:20px;
	  text-decoration: none;
	  text-transform: capitalize;
	  letter-spacing: 1px;
	  padding: 5px 15px;
	  }
nav ul li:hover a{
background: blue;
color:#0a5071;
}
